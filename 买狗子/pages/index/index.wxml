<!--index.wxml-->
<view class="container">
  <map id="map"
    longitude="{{longitude}}"
    latitude="{{latitude}}"
    scale="14"

    controls="{{controls}}"
    bindcontroltap="controltap"

    markers="{{markers}}"
    bindmarkertap="markertap"
    
    polyline="{{polyline}}"
    bindregionchange="regionchange"
    show-location="true"
    
    >
  </map>
</view>
<view class='footer'>
  <navigator url='/pages/serch/serch'>
    <view>搜索</view>
  </navigator>
  <navigator url='/pages/fabu/fabu'>
    <view>发布</view>
  </navigator>
</view>